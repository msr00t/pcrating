<div class="row game <%= 'even' if review_counter % 2 == 0 %>">
  <div class="col-xs-2 game-name">
    <%= link_to review.game.title, game_path(id: review.game.slug) %>
    <%= link_to image_tag(review.game.header_image, class: 'game-image'), game_path(id: review.game.slug) %>
    <%= link_to 'View full review', game_rating_path(game_id: review.game.slug, id: review.id) %>
  </div>
  <div class="col-xs-1 ranking stat">
    <%= image_tag review.ranking.to_s + '.jpg' %>
  </div>
  <div class="col-xs-1 stat">
    <%= review.get_rounded_stat :framerate %>
  </div>
  <div class="col-xs-1 stat">
    <%= review.get_rounded_stat :resolution %>
  </div>
  <div class="col-xs-1 stat">
    <%= review.get_rounded_stat :optimization %>
  </div>
  <div class="col-xs-1 stat">
    <%= review.get_rounded_stat :mods %>
  </div>
  <div class="col-xs-1 stat">
    <%= review.get_rounded_stat :servers %>
  </div>
  <div class="col-xs-1 stat">
    <%= review.get_rounded_stat :dlc %>
  </div>
  <div class="col-xs-1 stat">
    <%= review.get_rounded_stat :bugs %>
  </div>
  <div class="col-xs-1 stat">
    <%= review.get_rounded_stat :settings %>
  </div>
  <div class="col-xs-1 stat">
    <%= review.get_rounded_stat :controls %>
  </div>
</div>
